<% # Sign-in Page, called when we want a new user, submits to create User %>
<div>
  <%= form_with model: @user do |f|%>
    <div class="card mb-3">
      <div class="card-header text-center">Signup</div>

      <div class="card-body">

        <!-- Name input -->
        <div class="form-outline mb-4">
          <%= f.text_field :name, class: "form-control", id: "form-signup-text"%>
          <%= f.label :name, class: "form-label", for: "form-signup-text" %>
        </div>
        
        <!-- Email input -->
        <div class="form-outline mb-4">
          <%= f.email_field :email, class: "form-control", id: "form-signup-email"%>
          <%= f.label :email, class: "form-label", for: "form-signup-email" %>
        </div>

        <!-- Username input -->
        <div class="form-outline mb-4">
          <%= f.text_field :username, class: "form-control", id: "form-signup-username"%>
          <%= f.label :username, class: "form-label", for: "form-signup-username" %>
        </div>

        <!-- Password input -->
        <div class="form-outline mb-4">
          <%= f.password_field :password, class: "form-control", id: "form-signup-pw"%>
          <%= f.label :password, class: "form-label", for: "form-signup-pw" %>
        </div>

        <!-- Submit button -->
        <div class="text-center">
        <%= f.submit "Create User", class: "btn btn-primary btn-block mb-4" %>
        </div>
      </div>
    </div>
  <%end%>
</div>
